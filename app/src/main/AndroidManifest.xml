<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miniproject.cyberfraudsocialmedia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_app_512"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_app_512"
        android:supportsRtl="true"
        android:theme="@style/Theme.CyberFraudSocialMedia">
        <activity
            android:name=".ActivityChat"
            android:exported="true"
            android:noHistory="true"/>
        <activity
            android:name=".ActivityCreatePost"
            android:exported="true" />
        <activity
            android:name=".ActivitySplash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityVerifyMail"
            android:exported="true" />
        <activity
            android:name=".ActivityHome"
            android:exported="true" />
        <activity
            android:name=".ActivitySignup"
            android:exported="true" />
        <activity
            android:name=".ActivityLogin"
            android:exported="true" />
        <activity
            android:name=".ActivityAuthentication"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>